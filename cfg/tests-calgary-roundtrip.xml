<?xml version="1.0" encoding="UTF-8"?>

<testSuite name="Round-trip test using Calgary corpus data set"
  xmlns="http://www.sun.com/japex/testSuite"
  xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <description><div xmlns=""><p>
Round-trip (compress+decompress) test using Calgary corpus data set
</p></div></description>

    <!-- Drivers -->
    <driverGroup name="javaDrivers" xmlns="http://www.sun.com/japex/testSuite"
       xmlns:xi="http://www.w3.org/2001/XInclude">

  <driver name="Gzip/JDK/stream">
        <description><div xmlns=""><p>Test driver for JDK Gzip/Deflate, streaming
		</p></div></description>
        <param name="streaming" value="true" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.driverClass" value="com.ning.jcbm.gzip.JDKGzipDriver" />
   </driver>
	   
   <driver name="jblosc,lz4(JNA),4Threads/DirectByteBuffer" normal="false">
        <description><div xmlns=""><p>jblosc,lz4(JNA),4Threads/Direct ByteBuffer</p></div></description>
		<param name="streaming" value="true" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/jblosc/*.jar"/>
        <param name="japex.driverClass" value="com.ning.jcbm.jbloscBuffer.jbloscDriverThreaded"/>
  </driver>

  <driver name="jblosc,lz4(JNA),1Thread/DirectByteBuffer" normal="false">
        <description><div xmlns=""><p>jblosc,lz4(JNA),1Thread/Direct ByteBuffer</p></div></description>
		<param name="streaming" value="true" />
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/jblosc/*.jar"/>
        <param name="japex.driverClass" value="com.ning.jcbm.jbloscBuffer.jbloscDriver"/>
  </driver>

 
  <driver name="LZ4(JNI),1Thread/byte[]" normal="false">
        <description><div xmlns=""><p>LZ4/JNI, block mode</p></div></description>
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/lz4-jni/*.jar"/>
        <param name="japex.driverClass" value="com.ning.jcbm.lz4.Lz4JNIDriver" />
        <param name="java.library.path" value="lib/lz4-jni" />
  </driver>
  
  <driver name="Snappy(iq80),1Thread/byte[]" normal="false">
        <description><div xmlns=""><p>Snappy(iq80),1Thread/byte[]"</p></div></description>
        <param name="japex.classPath" value="build/classes"/>
        <param name="japex.classPath" value="lib/iq80-snappy/*.jar"/>
        <param name="japex.driverClass" value="com.ning.jcbm.iq80snappy.Iq80SnappyDriver"/>
  </driver>
</driverGroup>
  	   

    <!-- Test cases: name has to match with filename -->

<testCase name='R:bib' />
<testCase name='R:book1' />
<testCase name='R:book2' />
<testCase name='R:geo' />
<testCase name='R:news' />
<testCase name='R:obj1' />
<testCase name='R:obj2' />
<testCase name='R:paper1' />
<testCase name='R:paper2' />
<testCase name='R:paper3' />
<testCase name='R:paper4' />
<testCase name='R:paper5' />
<testCase name='R:paper6' />
<testCase name='R:pic' />
<testCase name='R:progc' />
<testCase name='R:progl' />
<testCase name='R:progp' />
<testCase name='R:trans' />

</testSuite>
